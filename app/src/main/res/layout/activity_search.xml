<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.activity.SearchActivity"
    android:id="@+id/drawer_layout_activity_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/main_content_search_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/background">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/background"
                app:layout_collapseMode="pin">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgBack"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/content_description_button_back"
                        android:src="@drawable/ic_baseline_arrow_back_ios_24" />

                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/search_view_atv_search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layoutDirection="rtl"
                        app:defaultQueryHint="Search">
                    </androidx.appcompat.widget.SearchView>

                    <ImageView
                        android:id="@+id/btn_filter_activity_search"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_filter_dark" />

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>
            <TextView
                android:id="@+id/txtNameMovie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/top_searches"
                android:textColor="@color/text_color"
                android:textSize="30sp"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycle_view_search_atv_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                tools:listitem="@layout/item_recycler_view_activity_search">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/right_drawer_search_activity"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border_filter_search"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_option_filter_search"
                android:layout_marginStart="@dimen/margin_left_right_item_filter"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_close_filter_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

                <TextView
                    android:id="@+id/title_filter_nav_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/filter"
                    android:textAlignment="center"
                    android:layout_marginEnd="40dp"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/title_filter_search" />
            </LinearLayout>

            <ScrollView
                android:id="@+id/scrollView3"
                android:layout_marginEnd="@dimen/margin_left_right_item_filter"
                android:layout_marginStart="@dimen/margin_left_right_item_filter"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/text_color">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkbox_adult_filter_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:layoutDirection="rtl"
                        android:text="@string/lbl_include_adult"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_title_option_filter" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/lbl_year"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_title_option_filter" />

                        <EditText
                            android:id="@+id/txt_year_filter_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:inputType="number"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/text_size_title_option_filter" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/space_option_filter_search" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_genres"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_title_option_filter" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chipGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:checked="true"
                            android:textColor="@color/text_color"
                            android:text="Genreseeeeeeeeeeeeeeeeeeeeeeee" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:text="Genreseeeeeeeeeeeeeeeeeeeeeeee" />
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:text="Genreseeeeeeeeeeeeeeeeeeeeeeee" />
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:text="Genreseeeeeeeeeeeeeeeeeeeeeeee" />
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:text="Genreseeeeeeeeeeeeeeeeeeeeeeee" />
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:text="Genreseeeeeeeeeeeeeeeeeeeeeeee" />
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:text="Genreseeeeeeeeeeeeeeeeeeeeeeee" />
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:text="Genreseeeeeeeeeeeeeeeeeeeeeeee" />
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:text="Genreseeeeeeeeeeeeeeeeeeeeeeee" />
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:text="Genreseeeeeeeeeeeeeeeeeeeeeeee" />
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:text="Genreseeeeeeeeeeeeeeeeeeeeeeee" />
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:text="Genreseeeeeeeeeeeeeeeeeeeeeeee" />
                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.Chip.Filter"
                            android:text="Genreseeeeeeeeeeeeeeeeeeeeeeee" />


                    </com.google.android.material.chip.ChipGroup>
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_left_right_item_filter"
                android:layout_marginStart="@dimen/margin_left_right_item_filter"
                android:layout_marginTop="@dimen/space_option_filter_search"
                android:layout_marginBottom="@dimen/space_option_filter_search"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_set_default_filter_search"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_left_right_item_filter"
                    android:textSize="@dimen/text_size_title_option_filter"
                    android:layout_weight="1"
                    android:text="@string/text_bnt_set_default" />

                <Button
                    android:id="@+id/btn_submit_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_title_option_filter"
                    android:layout_weight="1"
                    android:text="@string/text_btn_filter" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</androidx.drawerlayout.widget.DrawerLayout>